<form asp-controller="Employee" asp-action="AddEmployee" method="post">
    <h2>Add Employee</h2>
    <div class="form-group">
        <label for="EmployeeName">Employee Name:</label>
        <input type="text" name="EmployeeName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="EmployeeCode">Employee Code:</label>
        <input type="text" name="EmployeeCode" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Rank">Rank:</label>
        <input type="text" name="Rank" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="DepartmentId">Department:</label>
        <select name="DepartmentId" class="form-control" required>
            @foreach (var department in ViewBag.Departments)
            {
                <option value="@department.Id">@department.DepartmentName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>