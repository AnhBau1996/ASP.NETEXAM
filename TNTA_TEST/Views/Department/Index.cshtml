@model IEnumerable<TNTA_TEST.Models.Department>

<h2>Department List</h2>
<a href="~/Department/AddDepartment">Thêm</a>
<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Code</th>
            <th>Location</th>
            <th>Number of Personnel</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentCode</td>
                <td>@department.Location</td>
                <td>@department.NumberOfEmployees</td>
                <td><a href="~/Department/EditDepartment">Sửa</a>|<a href="~/Department/Delete">Xóa</a></td>
            </tr>
        }
    </tbody>
</table>
